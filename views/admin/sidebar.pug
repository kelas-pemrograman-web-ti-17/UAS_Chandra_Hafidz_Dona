aside.main-sidebar
    // sidebar: style can be found in sidebar.less
    section.sidebar
        // Sidebar user panel
        .user-panel
            .pull-left.image
                img.img-circle(src='/adminlte/dist/img/avatar2.png' alt='User Image')
            .pull-left.info
                p #{session_store.username}
                a(href='#')
                    i.fa.fa-circle.text-success
                    |  Online
        ul.sidebar-menu(data-widget='tree')
            li.header MAIN NAVIGATION
                li.treeview
                    a(href='/')
                        i.fa.fa-dashboard
                        span Dashboard
                if(session_store.admin == true)
                    li.treeview
                        a(href='#')
                            i.fa.fa-laptop
                            span Data Donat
                            span.pull-right-container
                                i.fa.fa-angle-left.pull-right
                        ul.treeview-menu
                            li
                                a(href='/inputbuku')
                                    i.fa.fa-circle-o
                                    |  Input Data Donat
                            li
                                a(href='/databuku')
                                    i.fa.fa-circle-o
                                    |  Lihat Data Donat
                            li
                               a(href='/databuku')
                                 i.fa.fa-circle-o
                                     |  Transaksi



                else
                    li.treeview
                        a(href='#')
                            i.fa.fa-laptop
                            span Data Donat
                            span.pull-right-container
                                i.fa.fa-angle-left.pull-right
                        ul.treeview-menu
                            li
                                a(href='/databukumember')
                                    i.fa.fa-circle-o
                                    |  Lihat Data Donat

    // /.sidebar